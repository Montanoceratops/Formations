{
    "compilerOptions": {
        "target": "es2021",
        "module": "NodeNext",
        "esModuleInterop": true,
        "baseUrl": ".",
        "moduleResolution": "nodenext",
        "paths": {
            "/src/*": [
                "./src/*"
            ],
            "~*": [
                "./*"
            ]
        },
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    }
}